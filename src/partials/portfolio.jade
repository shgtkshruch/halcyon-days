- items = [{heading: 'creative minds', class: ''}, {heading: 'creative hearts', class: 'delay05s'}, {heading: 'creative ideas', class: 'delay1s'}]
section#portfolio.section
  .container
    .row
      #js-flexslider--portfolio.flex-container
        ul.slides
          - for (var i = 0; i < 2; i++)
            li
              each item, i in items
                .col-xs-12.col-sm-offset-1.col-sm-10.col-md-offset-0.col-md-4.wp4(class="#{item.class}")
                  .item
                    .item__image
                      img.item__img.item__img--full(src="images/item--portfolio__img-#{i+1}.jpg" alt="")
                      .item__overlay
                        a(href="#")
                          i.fa.fa-search
                          br
                          | View More
                    h2.item__heading= item.heading
